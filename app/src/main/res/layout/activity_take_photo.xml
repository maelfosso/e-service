<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.pasteur_yaounde.e_service.capture.view.RevealBackgroundView
        android:id="@+id/vRevealBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center_vertical"
            android:paddingLeft="24dp"
            android:paddingRight="24dp">

            <ImageButton
                android:id="@+id/annulerCapture"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_close_white_24dp"
                android:background="@drawable/btn_default_light" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/grid_on"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="24dp"
                android:src="@drawable/ic_grid_on_white_24dp"
                android:background="@drawable/btn_default_light" />

            <ImageButton
                android:id="@+id/camera_rear"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="24dp"
                android:background="@drawable/btn_default_light"
                android:src="@drawable/ic_camera_rear_white_24dp" />

        </LinearLayout>

        <org.pasteur_yaounde.e_service.capture.view.SquaredFrameLayout
            android:id="@+id/vPhotoRoot"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.commonsware.cwac.camera.CameraView
                android:id="@+id/cameraView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical" />

            <ImageButton
                android:id="@+id/ivTakenPhoto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:scaleType="centerCrop"
                android:background="@android:color/transparent" />

            <View
                android:id="@+id/vShutter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:background="#ffffff" />

        </org.pasteur_yaounde.e_service.capture.view.SquaredFrameLayout>

        <ViewFlipper
            android:id="@+id/flipperEltSpace"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <ImageButton
                        android:id="@+id/voir_galeri"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_collections_white_24dp"
                        android:background="@drawable/btn_capture_options" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/btnTakePhoto"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_capture" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/prendre_video"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_videocam_white_24dp"
                        android:background="@drawable/btn_capture_options" />

                </FrameLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true">

                    <ImageView
                        android:src="@drawable/ic_menu_send"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />

                </FrameLayout>
               <!-- <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="37dp"
                    android:layout_alignParentLeft="true">

                    <ImageButton
                        android:id="@+id/envoyer_par_mail"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_email_white_24dp"
                        android:background="@drawable/btn_capture_options" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="37dp"
                    android:layout_alignParentRight="true">

                    <ImageButton
                        android:id="@+id/envoyer_par_whatsapp"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:src="@drawable/call_whatsapp"
                        android:background="@drawable/btn_capture_options" />

                </FrameLayout>-->

            </RelativeLayout>

        </ViewFlipper>

    </LinearLayout>

</FrameLayout>